<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.flo.tmdbprojetflorianjacquin.Activity.FilmDetailActivity"
    tools:showIn="@layout/activity_film_detail" >


    <ImageView
        android:id="@+id/backdrop"
        android:layout_width="380dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="01dp"
        android:layout_marginTop="0dp" />


    <TextView
        android:id="@+id/tv_titre"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="nom"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/backdrop"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_original"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="nomOriginal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_titre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titre" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="date"
        app:layout_constraintBottom_toBottomOf="@+id/tv_titre"
        app:layout_constraintEnd_toStartOf="@+id/tv_note"
        app:layout_constraintLeft_toRightOf="@+id/tv_titre"
        app:layout_constraintTop_toTopOf="@+id/tv_titre"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="note"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/backdrop"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="description"
        android:textAlignment="inherit"
        app:layout_constraintLeft_toLeftOf="@+id/tv_original"
        app:layout_constraintRight_toRightOf="@+id/tv_original"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_original" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="384dp"
        android:layout_height="199dp"
        android:visibility="invisible"
        android:background="#00000000"
        android:onClick="watchYoutubeVideo"
        app:srcCompat="@android:drawable/ic_media_play"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/backdrop"
        app:layout_constraintTop_toTopOf="@+id/backdrop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />


    <ImageButton
        android:id="@+id/action_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:onClick="share"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_menu_share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/imageFavoris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_favorite"
        android:onClick="favoris"
        android:background="#00000000"
        app:layout_constraintRight_toLeftOf="@+id/action_share"
        app:layout_constraintBottom_toBottomOf="@+id/action_share"
        android:layout_marginBottom="0dp"
        tools:ignore="VectorDrawableCompat"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/action_share" />

    <ImageButton
        android:id="@+id/imageFavorisOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_favorite_ok"
        android:visibility="invisible"
        android:onClick="favorisSupr"
        android:background="#00000000"
        app:layout_constraintRight_toLeftOf="@+id/action_share"
        app:layout_constraintBottom_toBottomOf="@+id/action_share"
        android:layout_marginBottom="0dp"
        tools:ignore="VectorDrawableCompat"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/action_share" />


</android.support.constraint.ConstraintLayout>
