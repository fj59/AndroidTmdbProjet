<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">

        <ImageView
        android:id="@+id/image"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/backdrop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />
        <TextView
            android:id="@+id/tv_titre"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="nom"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/image"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/image"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            android:layout_marginBottom="0dp" />" />
        <TextView
            android:id="@+id/tv_t"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text=" ~ "
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_titre"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_titre"
            app:layout_constraintBottom_toBottomOf="@+id/tv_titre"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="date"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_t"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_t"
            app:layout_constraintBottom_toBottomOf="@+id/tv_t"
            android:layout_marginBottom="0dp" />
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="la description du film"
            android:visibility="invisible"/>





</android.support.constraint.ConstraintLayout>